{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "types": [
      "node",
      "vite/client"
    ],
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "include": [
    "src/main",
    "src/preload.js",
    "src/preload.ts",
    "electron.vite.config.js",
    "electron.vite.config.ts"
  ]
}